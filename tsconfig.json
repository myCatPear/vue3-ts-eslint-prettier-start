{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM", "ScriptHost"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
}
